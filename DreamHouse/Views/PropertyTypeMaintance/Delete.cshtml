@using DreamHouse.Core.Application.ViewModels.PropertyType

@model PropertyTypeSaveViewModel;
@{
    ViewData["Title"] = "Eliminar property type";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <h4>Are you sure to delete this property type @Model.Name?</h4>
                <h4 class="text-danger">All related properties are going to be deleted</h4>

            </div>
            <div class="card-body">
                <form method="post" asp-controller="PropertyTypeMaintance" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />

                    <a asp-controller="PropertyTypeMaintance" asp-action="Index" class="btn btn-warning">Cancel</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

