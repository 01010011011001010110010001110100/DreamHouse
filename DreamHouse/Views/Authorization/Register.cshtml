@model DreamHouse.Core.Application.ViewModels.User.UserSaveViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="col-md-7 col-lg-8 mx-auto mt-5">

    <div class="row mb-3 mt-4">
        <div class="d-flex gap-2 p-0">
            <div class="rounded-3 bg-primary p-1 flex-grow-1">
                <h1 class="fw-bold text-light m-0 p-0 ms-4">Register</h1>
            </div>
        </div>
    </div>

    <form asp-action="Register" method="post" enctype="multipart/form-data">
        <div class="row g-3">
        <div class="col-sm-6">
            <label asp-for="FirstName" class="form-label">First name</label>
            <input asp-for="FirstName" class="form-control">
            @Html.ValidationMessage("InvalidFirstName", "", new { @class = "text-danger" })
        </div>

        <div class="col-sm-6">
            <label asp-for="LastName" class="form-label">Last name</label>
            <input asp-for="LastName" class="form-control">
            @Html.ValidationMessage("InvalidLastName", "", new { @class = "text-danger" })
        </div>

        <div class="col-12">
            <label asp-for="UserName" class="form-label">Username</label>
            <div class="input-group has-validation">
                <span class="input-group-text"></span>
                <input asp-for="UserName" class="form-control">
                @Html.ValidationMessage("InvalidUserName", "", new { @class = "text-danger" })
                @Html.ValidationMessage("UserNameExists", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-12">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control">
            @Html.ValidationMessage("InvalidEmail", "", new { @class = "text-danger" })
            @Html.ValidationMessage("InvalidEmailFormat", "", new { @class = "text-danger" })
            @Html.ValidationMessage("EmailExists", "", new { @class = "text-danger" })
        </div>

        <div class="col-12">
            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control">
            @Html.ValidationMessage("InvalidPhoneNumber", "", new { @class = "text-danger" })
        </div>

        <div class="col-12">
            <label asp-for="IdCard" class="form-label">ID Card</label>
            <input asp-for="IdCard" class="form-control">
            @Html.ValidationMessage("InvalidIdCard", "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control">
                @Html.ValidationMessage("PasswordRequired", "", new { @class = "text-danger" })
                @Html.ValidationMessage("MinPasswordLength", "", new { @class = "text-danger" })
                @Html.ValidationMessage("LowerCase", "", new { @class = "text-danger" })
                @Html.ValidationMessage("UpperCase", "", new { @class = "text-danger" })
                @Html.ValidationMessage("RequireDigit", "", new { @class = "text-danger" })
                @Html.ValidationMessage("RequireNonAlphanumeric", "", new { @class = "text-danger" })
                @Html.ValidationMessage("PasswordMismatch", "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control">
        </div>

        <div class="col-md-4">
            <label asp-for="UserType" class="form-label">User Type</label>
            <select asp-for="UserType" class="form-select">
                <option value="">Choose...</option>
                <option value="CLIENT">CLIENT</option>
                <option value="AGENT">AGENT</option>
            </select>
            @Html.ValidationMessage("InvalidUserType", "", new { @class = "text-danger" })
        </div>

            <div class="mb-3">
                <label asp-for="File" class="form-label">Select a photo</label>
                <input asp-for="File" class="form-control"/>
                @Html.ValidationMessage("InvalidImageUrl", "", new { @class = "text-danger" })
            </div>

        </div>

        <hr class="my-4">

        <button class="w-100 btn btn-primary btn-lg" type="submit">Register</button>
    </form>
</div>
