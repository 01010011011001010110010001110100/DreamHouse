@model DreamHouse.Core.Application.ViewModels.Home.ClientHomeViewModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="container mt-4">
    <form method="get" asp-action="HomeBasic">
        <div class="row mb-3">
            <div class="col-md-2">
                <input type="text" class="form-control" name="code" placeholder="Código" value="@ViewContext.HttpContext.Request.Query["code"]">
            </div>
            <div class="col-md-2">
                <input type="text" class="form-control" name="type" placeholder="Tipo de Propiedad" value="@ViewContext.HttpContext.Request.Query["type"]">
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control" name="minPrice" placeholder="Precio Mínimo" value="@ViewContext.HttpContext.Request.Query["minPrice"]">
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control" name="maxPrice" placeholder="Precio Máximo" value="@ViewContext.HttpContext.Request.Query["maxPrice"]">
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control" name="bedrooms" placeholder="Habitaciones" value="@ViewContext.HttpContext.Request.Query["bedrooms"]">
            </div>
            <div class="col-md-2">
                <input type="number" class="form-control" name="bathrooms" placeholder="Baños" value="@ViewContext.HttpContext.Request.Query["bathrooms"]">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary">Filtrar</button>
                <a href="@Url.Action("HomeBasic")" class="btn btn-secondary">Limpiar Filtros</a>
            </div>
        </div>
    </form>

    <div class="products">
        @if (Model.Properties != null && Model.Properties.Any())
        {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var property in Model.Properties)
                {
                    <div class="col">
                        <div class="card shadow-sm" onclick="location.href='@Url.Action("HomeDetail", "DetailProperties", new { id = property.Id })'" style="cursor: pointer;">
                            <!-- Aquí deberías incluir la imagen de la propiedad -->
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="150" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                                <title>Placeholder</title>
                                <rect width="100%" height="100%" fill="#55595c"></rect>
                                <text x="45%" y="50%" fill="#eceeef" dy=".3em">Foto</text>
                            </svg>
                            <div class="card-body">
                                <h5 class="card-title">@property.TypePropertyName</h5>
                                <p class="card-text">
                                    Code: @property.Code<br />
                                    Habitaciones: @property.Bedrooms<br />
                                    Baños: @property.Bathrooms<br />
                                    Tamaño: @property.SquareMeter m²<br />
                                    Tipo de Venta: @property.TypeSaleName<br />
                                    Valor: @property.Price$
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="@Url.Action("HomeDetail", "DetailProperties", new { id = property.Id })" class="btn btn-sm btn-outline-secondary">Ver</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No hay propiedades.</p>
        }
    </div>
</div>

<style>
    .card {
        width: 20rem;
    }

    .card-img-top {
        height: 150px; /* Ajusta esta altura según sea necesario */
    }
</style>

