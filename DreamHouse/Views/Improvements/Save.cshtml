@using DreamHouse.Core.Application.ViewModels.Improvement
@using DreamHouse.Core.Application.ViewModels.PropertyType
@using DreamHouse.Core.Application.ViewModels.SaleType
@using DreamHouse.Core.Application.ViewModels.User
@using DreamHouse.Core.Application.Enums;

@model ImprovementSaveViewModel;

@{
    bool editMode = Model.Id == null ? false : true;
    ViewData["Title"] = "Save improvement";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="rounded-3 p-1 bg-primary mb-2">
                <h2 class="fw-bold text-light m-0 p-0 ms-4">@(editMode ? $"Editing the improvement: '{Model.Name}' " : "Create a improvement")</h2>
            </div>

            <div class="card border-0">
                <div class="card-body">
                    @Html.ValidationMessage("UserDoesntExists", "", new { @class = "text-danger" })

                    <form method="post" asp-controller="Improvements" asp-action="@(editMode ? "Edit" : "Save")">
                        <div >
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Name: </label>
                                <input asp-for="Name" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Description: </label>
                                <input asp-for="Description" class="form-control">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-controller="Improvements" asp-action="Index" class="btn btn-warning">Cancel</a>
                            <button type="submit" class="btn btn-primary"> Save </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
