@using DreamHouse.Core.Application.ViewModels.Improvement
@using DreamHouse.Core.Application.ViewModels.PropertyType
@using DreamHouse.Core.Application.ViewModels.SaleType

@model ImprovementSaveViewModel;
@{
    ViewData["Title"] = "Eliminar improvement";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <h4>Are you sure to delete this improvement: "<span class="text-danger">@Model.Name</span>"?</h4>

            </div>
            <div class="card-body">
                <form method="post" asp-controller="Improvements" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />

                    <a asp-controller="Improvements" asp-action="Index" class="btn btn-warning">Cancel</a>
                    <button type="submit" class="btn btn-primary">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

